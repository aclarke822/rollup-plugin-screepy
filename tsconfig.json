{
  "compilerOptions": {
    "module": "ESNEXT",
    "target": "ESNEXT",
    "outDir": "./dist",
    "rootDir": "./src",
    "baseUrl": "./src",
    "declaration": true,
    "declarationDir": "./",
    "strict": true,
    "experimentalDecorators": true,
    "noImplicitReturns": true,
    "allowSyntheticDefaultImports": true,
    "allowUnreachableCode": false,
    
    "moduleResolution": "Node",
    "typeRoots": [
      "./node_modules/@types",
      "./typings"
    ],
    "esModuleInterop": true
  },
  "exclude": [
    "node_modules",
    "dist"
  ],
  "include": [
    "./src"
  ]
}